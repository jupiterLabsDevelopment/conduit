# Copy to .env and adjust values before running docker compose

# API / UI
JWT_SECRET=dev-secret-change-me
VITE_API_BASE=http://localhost:8080
VITE_API_WS=ws://localhost:8080

# Agent connectivity
CONDUIT_API_WS=ws://api:8080/agent/connect
CONDUIT_AGENT_TOKEN=replace-with-token
MC_MGMT_WS=wss://host.docker.internal:24464
MC_MGMT_TOKEN=replace-with-management-token
MC_TLS_MODE=skip

# Optional TLS overrides (uncomment as needed)
# MC_TLS_ROOT_CA=/path/to/ca-bundle.pem
# MC_TLS_SERVER_NAME=minecraft.local
# MC_TLS_HANDSHAKE_TIMEOUT=20s

# Optional reconnect & telemetry tuning
# AGENT_BACKOFF_INITIAL=1s
# AGENT_BACKOFF_MAX=30s
# AGENT_BACKOFF_MULTIPLIER=2.0
# AGENT_BACKOFF_JITTER=500ms
# AGENT_TELEMETRY_INTERVAL=60s
